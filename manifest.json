{
  "manifest_version": 2,
  "name": "Obfuscator Plugin",
  "description": "Obfuscate your messages",
  "icons": {
      "16":"obfuscator_icon16.png",
      "48":"obfuscator_icon48.png",
      "128":"obfuscator_icon128.png"
  },
  "version": "0.4",
  "permissions": ["alarms", "tabs", "bookmarks", "*://*/*"], 
  "content_scripts": [{   
     "matches": ["<all_urls>","http://*/*","https://*/*"],
     "js": ["sha1.js","string-ext.js","mode-cfb-min.js","pad-ansix923-min.js","math-ext.js","enc-base64-min.js", "obfuscator.js","deobfuscator.js","alg.js","MaskedAES128.js","aes.js", "authomatic.js"],
     "run_at": "document_start"
  }],
  "browser_action": {
    "default_icon" : "icon3.png",
    "default_title": "Obfuscator",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  }
}