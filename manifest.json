{
  "manifest_version": 2,
  "name": "Ofuscator Plugin",
  "description": "Hash the selected text with SHA1",
  "version": "0.0",
  "permissions": ["alarms", "tabs", "bookmarks", "*://*/*"],
  
 "content_scripts": [{   
     "matches": ["<all_urls>","http://*/*","https://*/*"],
     "js": ["sha1.js","contain.js"],
     "run_at": "document_start"
  }],
  "browser_action": {
    "default_icon" : "icon.png",
    "default_title": "Ofuscator",
    "default_popup": "popup.html"
  }
}